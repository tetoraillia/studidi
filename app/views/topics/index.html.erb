<div class="container">
  <div class="center">
    <nav>
      <ul>
        <li><%= link_to "Responses", total_responses_path(current_user), class: "btn btn-primary" %></li>
        <li><%= link_to "Courses", courses_path, class: "btn btn-primary" %></li>
        <li><%= link_to "Bookmarks", bookmarks_path(current_user), class: "btn btn-primary" %></li>
      </ul>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Topics for <%= @course.title %></h1>
      <% if policy(Topic.new(course: @course)).create? %>
        <%= link_to "New Topic", new_course_topic_path(@course), class: "btn btn-primary" %>
      <% end %>
    </div>

    <% if @topics.any? %>
      <div class="topics-list">
        <% @topics.each do |topic| %>
          <div class="topic-card">
            <div class="topic-header">
              <h3 class="topic-title">
                <%= link_to topic.title, course_topic_path(@course, topic), class: "text-decoration-none" %>
              </h3>
              <div class="topic-meta">
                <span class="badge bg-secondary">Position: <%= topic.position %></span>
              </div>
            </div>
            <br>
            
            <div class="topic-actions">
              <%= link_to "View", course_topic_path(@course, topic), class: "btn btn-sm btn-outline-primary" %>
              <% if policy(topic).update? %>
                <%= link_to "Edit", edit_course_topic_path(@course, topic), class: "btn btn-sm btn-outline-secondary" %>
              <% end %>
              <% if policy(topic).destroy? %>
                <%= button_to "Delete", 
                            course_topic_path(@course, topic), 
                            method: :delete, 
                            data: { confirm: "Are you sure you want to delete this topic?" },
                            class: "btn btn-sm btn-outline-danger" %>
                            <span class="visually-hidden">Delete</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="mt-4">
        <%= paginate @topics %>
      </div>
    <% else %>
      <div class="alert alert-info">
        No topics have been created yet.
        <% if policy(Topic.new(course: @course)).create? %>
          <%= link_to "Create the first topic", new_course_topic_path(@course), class: "alert-link" %>
        <% end %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= link_to "Back to Course", course_path(@course), class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

