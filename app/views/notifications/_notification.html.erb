<% type = notification.params[:type].to_s.capitalize.presence || "Other" %>
<% badge_class = {
  "Enrollment" => "primary",
  "Invitation" => "warning",
  "Lesson"     => "success",
  "Mark"       => "info",
  "Response"   => "dark"
}[type] || "secondary" %>

<div class="list-group-item d-flex justify-content-between align-items-start">
  <div>
    <span class="badge bg-<%= badge_class %> me-2"><%= type %></span>
    <strong><%= notification.params[:message] %></strong><br>
    <% if notification.params[:url].present? %>
      <a href="<%= notification.params[:url] %>">Go to link</a>
    <% end %>
  </div>
  <div class="text-end">
    <% if notification.read_at.nil? %>
      <%= button_to "Mark as read", notification_path(notification), method: :put, class: "btn btn-sm btn-outline-primary" %>
    <% else %>
      <span class="badge bg-secondary">Read</span>
    <% end %>
  </div>
</div>
