<div class="nested-fields border rounded p-3 mb-3 option-field" data-persisted="<%= form.object.persisted? %>">
  <div class="d-flex justify-content-between align-items-start mb-2">
    <h6 class="mb-0">Option</h6>
  </div>
  
  <div class="field mb-3">
    <%= form.label :title, "Option title", class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter option text" %>
  </div>
  
  <div class="field">
    <div class="form-check">
      <%= form.check_box :is_correct, class: "form-check-input" %>
      <%= form.label :is_correct, "Mark as correct answer", class: "form-check-label" %>
    </div>
  </div>
</div>