<h1>Lesson</h1>

<%= form_with(model: [ @course, @course_module, @lesson ]) do |form| %>  
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <%= form.hidden_field :course_module_id, value: @course_module.id %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :content_type %>
    <%= form.select :content_type, [ "text", "video", "test" ] %>
  </div>

  <div class="field">
    <%= form.label :position %>
    <%= form.number_field :position %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
