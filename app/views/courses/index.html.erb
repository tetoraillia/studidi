<h1>Courses</h1>

<% if current_user&.teacher? %>
  <%= link_to "New Course", new_course_path, class: "btn btn-primary" %>
<% end %>

<% @courses.each do |course| %>
  <div class="course">
    <h2><%= course.title %></h2>
    <p><%= course.description %></p>
    <p class="instructor">Instructor: <%= course.instructor.first_name %></p>
    
    <div class="actions">
      <div class="primary-actions">
        <%= link_to "View", course_path(course), class: "btn btn-info" %>
        <% if current_user&.student? && !current_user.enrolled_courses.include?(course) %>
          <%= button_to "Enroll", course_enrollments_path(course), method: :post, class: "btn btn-primary" %>
        <% end %>
        <% if current_user&.student? && current_user.enrolled_courses.include?(course) %>
          <span class="badge badge-success">Enrolled</span>
          <%= button_to "Leave", course_enrollment_path(course, current_user.enrollments.find_by(course: course)), method: :delete, data: { confirm: "Are you sure you want to leave this course?" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>

    <% if current_user&.teacher? %>
      <div class="actions">
        <div class="primary-actions">          
          <%= link_to "Edit", edit_course_path(course), class: "btn btn-warning" %>
        </div>
        <div class="danger-action">
          <%= button_to "Delete", course_path(course), method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="pagination">
  <%= paginate @courses %>
</div>

<style>
  .course {
    margin: 20px 0;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  .instructor {
    color: #666;
    font-style: italic;
  }

  .actions {
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .primary-actions {
    display: flex;
    gap: 10px;
  }

  .btn {
    padding: 8px 12px;
    border-radius: 4px;
    text-decoration: none;
    margin-right: 10px;
  }

  .btn-primary { background-color: #007bff; color: white; }
  .btn-info { background-color: #007bff; color: white; }
  .btn-warning { background-color:rgb(192, 192, 192); color: #333; }
  .btn-danger { background-color: #dc3545; color: white; }

  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    gap: 8px;
    margin-bottom: 20px
  }

  .pagination a {
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    color: #333;
    text-decoration: none;
    transition: all 0.2s;
  }

  .pagination a:hover {
    background-color: #f8f9fa;
    border-color: #007bff;
    color: #007bff;
  }

  .pagination .current {
    border-color: #007bff;
    font-weight: 500;
  }

  .pagination .disabled {
    color: #666;
    pointer-events: none;
    opacity: 0.6;
  }

  .badge {
    display: inline-block;
    padding: 0.35em 0.65em;
    font-size: 0.9em;
    font-weight: 600;
    color: #fff;
    background-color: #6c757d;
    border-radius: 0.25rem;
    vertical-align: baseline;
  }

  .badge-success {
    background-color: #28a745;
  }
</style>

