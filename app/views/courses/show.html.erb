<h1>Course: <%= @course.title %></h1>
<%= link_to "New Module", new_course_course_module_path(@course) %>

<p>Description: <%= @course.description %></p>
<p>Instructor: <%= @course.instructor.first_name %></p>

<% @course_modules.each do |course_module| %>
    <%= course_module.title %>
    <%= link_to "Edit", edit_course_course_module_path(course_module.course_id, course_module.id) %>
    <%= button_to "Destroy", course_course_module_path(course_module.course_id, course_module.id), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<br>

<%= link_to "Edit", edit_course_path(@course) %>
<%= link_to "Back to Courses", courses_path %>
